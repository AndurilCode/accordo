{
  "mcpServers": {
    "accordo": {
      "command": "uvx",
      "args": [
        "accordo-workflow-mcp", 
        "--local",
        "--enable-local-state-file",
        "--local-state-file-format", "JSON",
        "--session-retention-hours", "72",
        "--enable-cache-mode",
        "--cache-embedding-model", "all-MiniLM-L6-v2",
        "--cache-db-path", ".accordo/cache",
        "--cache-max-results", "50"
      ]
    }
  }
} 